{
  "name": "mysql-source-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "config.providers" : "file",
    "config.providers.file.class" : "org.apache.kafka.common.config.provider.FileConfigProvider",
    "providers" : "file",
    "providers.file.class" : "org.apache.kafka.common.config.provider.FileConfigProvider",
    "database.hostname": "mysql",
    "database.port": "3306",
    "database.user": "${file:/secrets/env.properties:MYSQL_USER}",
    "database.password": "${file:/secrets/env.properties:MYSQL_PASSWORD}",
    "database.server.id": "202402241945",
    "database.include.list": "${file:/secrets/env.properties:MYSQL_DATABASE}",
    "include.schema.changes": "true",
    "schema.history.internal.kafka.bootstrap.servers": "kafka:29092",
    "schema.history.internal.kafka.topic": "mysql.schema.history",
    "topic.prefix": "cdc"
  }
}
